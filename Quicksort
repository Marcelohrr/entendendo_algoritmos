def quicksort(array):
    if len(array) < 2:
        return array
    else:
        piv么 = array[0]
        subarray_menor = [i for i in array[1:] if i <= piv么]
        subarray_maior = [i for i in array[1:] if i > piv么]
        return quicksort(subarray_menor) + [piv么] + quicksort(subarray_maior)

# Teste
print(quicksort([-5, 2, 0, -10, 8, 17]))
[-10, -5, 0, 2, 8, 17]
